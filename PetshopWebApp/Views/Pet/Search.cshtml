@{
}
<form method="get" asp-action="Search" asp-controller="Pet">
    <div class="form-group">
        <label for="searchInput">Search the pets:</label>
        <input type="text" class="form-control" id="searchInput" name="searchTerm" placeholder="Enter the name">
    </div>
    <button type="submit" id="btn" class="btn btn-primary">Search</button>
</form>

<div id="table">
    <table>
        <tr>
            <th>PetName</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>

        </tr>

        @foreach (Pet p in Model)
        {
            <tr>
                <td>@p.PetName</td>
                <td>@p.PetDescription</td>
                <td>@p.Quantity</td>
                <td>@p.PetPrice</td>
                <td>
                    <form method="get" asp-action="Order" asp-controller="Pet">
                        <input type="hidden" name="petId" value="@p.PetId" />
                        <button type="submit" class="btn btn-success">Buy</button>
                    </form>
                </td>
            </tr>
        }


    </table>
</div>
<style>
    button, input, optgroup, select, textarea {
        margin: 5px;
    }
    .table {
        margin-top: 30px;
    }
    th, td {
        padding: 15px;
        text-align: left;
    }
</style>